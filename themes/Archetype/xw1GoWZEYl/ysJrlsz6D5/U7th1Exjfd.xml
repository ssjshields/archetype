<?xml version="1.0" encoding="UTF-8"?>
<themes>
	<theme name="settings-label-area" ref="-defaults">	
		<param name="background"><image>none</image></param>
		<param name="border"><border>2,5</border></param>
		<param name="defaultGap"><dimension>5,5</dimension></param>
		<param name="smallGap"><dimension>8,8</dimension></param>
		<param name="mediumGap"><dimension>10,10</dimension></param>
		<param name="largeGap"><dimension>15,15</dimension></param>
		<param name="namedGaps"><map/></param>
	</theme>
	
	<theme name="settings-panel" ref="base-frame" allowWildcard="true">
        <param name="background"><image>Settings-Window</image></param>
	    <!--<param name="fadeColorInactive"><color>#EBFFFFFF</color></param>-->
		<param name="titleAreaTop"><int>8</int></param>
        <param name="titleAreaLeft"><int>44</int></param>
        <param name="titleAreaRight"><int>-30</int></param>
        <param name="titleAreaBottom"><int>30</int></param>
        <param name="closeButtonY"><int>13</int></param>
        <theme name="dialoglayout" ref="dialoglayout">
            <param name="border"><border>40,10,10,10</border></param>
			<theme name="tabbedpane" ref="base-tabbed-pane">
				<param name="tabPosition"><enum type="tabposition">LEFT</enum></param>
				<param name="border"><border>0,15,0,0</border></param>
				<param name="minWidth"><int>230</int></param>
				<param name="background"><image>none</image></param>
				<theme name="tabbox" ref="tabbox">
					<param name="border"><border>6,0,10,0</border></param>
					<theme name="tabbutton" ref="togglebutton">
						<param name="minWidth"><int>90</int></param>
						<param name="border"><border>5,0,5,10</border></param>
						<param name=""><image>ui-tab-vertical.*</image></param>
						<param name="font"><font>pb-tab</font></param>
						<param name="textAlignment"><enum type="alignment">LEFT</enum></param>
					</theme>
					<param name="spacing"><int>8</int></param>
					<param name="alignment"><enum type="alignment">FILL</enum></param>
				</theme>
				<theme name="container" ref="container">
					<param name="border"><border>0,0,10,0</border></param>
					<theme name="settings-scrollpane" ref="-defaults" allowWildcard="true">
						<theme name="hscrollbar" ref="hscrollbar"/> 
						<theme name="vscrollbar" ref="vscrollbar-white"/>
						<param name="minWidth"><int>472</int></param>
						<param name="minHeight"><int>413</int></param>
						<param name="maxWidth"><int>32767</int></param>
						<param name="maxHeight"><int>32767</int></param>
						<param name="hasDragButton"><bool>false</bool></param>
						<param name="autoScrollArea"><int>5</int></param>
						<param name="autoScrollSpeed"><int>10</int></param>
						<param name="scrollbarsAlwaysVisible"><bool>false</bool></param>
						<param name="border"><border>0</border></param>
						<theme name="dialoglayout" ref="-defaults">
							<param name="border"><border>0</border></param>
							<param name="defaultGap"><dimension>5,5</dimension></param>
							<param name="smallGap"><dimension>8,8</dimension></param>
							<param name="mediumGap"><dimension>10,10</dimension></param>
							<param name="largeGap"><dimension>15,15</dimension></param>
							<param name="namedGaps"><map/></param>
						</theme>
					</theme>
					<theme name="settings-scrollpane-small" ref="settings-scrollpane" allowWildcard="true">
						<param name="minHeight"><int>200</int></param>
					</theme>
					<param name="background"><image>none</image></param>
					<theme name="dialoglayout" ref="dialoglayout">
						
						<param name="defaultGap"><dimension>5,5</dimension></param>
						<param name="smallGap"><dimension>8,8</dimension></param>
						<param name="mediumGap"><dimension>10,10</dimension></param>
						<param name="largeGap"><dimension>15,15</dimension></param>
						<param name="namedGaps"><map/></param>
					</theme>
				</theme>
				<param name="inputMap"><inputMapDef>
					<action name="nextTab">CTRL TAB</action>
					<action name="prevTab">CTRL SHIFT TAB</action>
				</inputMapDef></param>
			</theme>
		</theme>
	</theme>
	
	<theme name="translate-link" ref="button">
